<h1>Restaurants</h1>
<ul>
    <%@restaurants.each do  |restaurant| %>
    <li><%= restaurant.name%></li>
    <li><%= restaurant.category%></li>
    <li><%= restaurant.address%></li>
    <li><%= restaurant.phone_number%></li>
    <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
  <% end %>
</ul>
 <%= link_to "Add a new restaurant", new_restaurant_path(@restaurant), class: "btn btn-primary"%>
